                            <Path.RenderTransform>
                                <TransformGroup>
                                    <TransformGroup.Children>
                                        <RotateTransform Angle="0" />
                                        <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                                    </TransformGroup.Children>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </Viewbox>

                <Border Grid.Row="1" Background="#16499a"  />
                <TextBlock VerticalAlignment="Center" Text="I miei viaggi" FontSize="40" Padding="10, 0, 0, 0" FontWeight="ExtraBold" Grid.Row="1"/>
            </Grid>

            <Grid Height="250" Margin="25 5 25 5"  Grid.Row="1" Grid.Column="0">
                <Grid.Background>
                    <SolidColorBrush Color="#4390df"></SolidColorBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Grid.Row="0">
                    <Grid>
                        <Grid  Width="200" Height="200" Visibility="Collapsed" />
