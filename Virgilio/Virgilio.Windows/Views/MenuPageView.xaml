                            <Path.RenderTransform>
                                <TransformGroup>
                                    <TransformGroup.Children>
                                        <RotateTransform Angle="0" />
                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                    </TransformGroup.Children>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </Viewbox>

                <Border Grid.Row="1" Background="#16499a"  />
                <TextBlock VerticalAlignment="Center" Text="Aggiorna viaggi" FontSize="40" Padding="10, 0, 0, 0" FontWeight="ExtraBold" Grid.Row="1"/>
            </Grid>


        </Grid>
        
    </Grid>
</Page>
